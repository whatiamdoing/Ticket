<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity"
    android:background="@color/dark_grey">

    <TextView
        android:id="@+id/hello"
        style="@style/medium50.white"
        android:gravity="center"
        android:text="@string/hello"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/et_login"/>

    <EditText
        android:id="@+id/et_login"
        android:textColorHint="@color/black"
        android:layout_centerInParent="true"
        android:fontFamily="@font/ticket"
        android:gravity="center"
        android:hint="@string/enter_nickname"
        android:background="@drawable/custom_et_login"
        android:layout_marginTop="40dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:cursorVisible="false"
        android:paddingRight="@dimen/spacing_tiny_4"/>
    <Button
        android:id="@+id/btn_login"
        android:fontFamily="@font/ticket"
        android:textColor="@drawable/btn_text_color"
        android:textAllCaps="false"
        android:text="@string/continue_l"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button_login"/>

</RelativeLayout>